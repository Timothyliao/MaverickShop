.mask {
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	z-index: 0;
	opacity: 0;
	outline: 0;
	text-align: center;
    opacity: 1;
}

.mask.mask-light{
    background: rgba(0, 0, 0, 0.18);
}

.mask.mask-dark{
    background: rgba(0, 0, 0, 0.6);
}

