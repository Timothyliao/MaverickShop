.topBar,
.content,
.bottomMenu {
    height: max-content;
    padding: 0 5px;
}

.topBar {
    height: 20px;
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    justify-content: space-between;
    padding-bottom: 5px;
    border-bottom: 1px solid #f8f8f8;
    margin-bottom: 20px;
    background-color: #ffffff;
}

.topBar_item {
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    align-items: center;
}

.topBar_item image {
    width: 15px;
    height: 15px;
    margin-right: 5px;
}

.topBar_item label {
    font-size: 12px;
}

.content{
    height: 50%;
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.content-item{
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid #f8f8f8;
}

.imgBox{
    padding-right: 15px;
}

.imgBox image{
    width: 100px;
    height: 100px;
    border-radius: 5px;
}

.detail{
    display: -webkit-flex;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    
}

.detail text{
    padding-bottom: 3px;
}

.counter{
    width: 70px;
    display: -webkit-flex;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    align-content: center;
    padding: 0;
    margin: 0;
}

.counter image{
    width: 16px;
    height: 16px;
}

.counter text{
    font-size: 14px;
}

.bottomMenu {
    height: 80px;
    width: 100%;
    background-color: #ffffff;
    position: fixed;
    bottom: 0rpx;
    box-sizing: border-box;
    padding: 10px 0;
    border-top: 1px solid #f8f8f8;
}

.bottomBox{
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    align-items: center;
}

.controlMenu{
    display: flex;
    display: -webkit-flex;
    flex-direction: row;
    justify-content: space-between;
    margin-bottom: 10px;
}

.checksBox{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.checksBox image{
    width: 15px;
    height: 15px;
}

.checksBox label{
    line-height: 15px;
    padding-left: 5px;
}