.topBar,
.content{
    width: 100%;
    height: max-content;
    display: flex;
    padding: 0 5px;
}

.topBar{
    flex-direction: row;
    justify-content: space-between;
    padding-bottom: 5px;
    border-bottom: 1px solid #f8f8f8;
    margin-bottom: 20px;
}

.topBar .topBar_item cover-image{
    width: 15px;
    height: 15px;
    margin-right: 5px;
}

.topBar_item{
    display: flex;
    flex-direction: row;
    align-items: center;
}

.topBar_item text{
    font-size: 12px;
}

.content-item{
    width: 100%;
    display: flex;
    flex-direction: row;
}

.content-item cover-image{
    width: 140px;
    height: 120px;
}

.content-item .imgBox{
    width: 120px;
    height: 120px;
    border-radius: 10px;
    background-position: left;
    background-size: auto 90%;
    background-repeat: no-repeat;
}

.content-item .detail{
    width: 100%;
    margin-left: 10px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
}

.content-item .detail text,
.content-item .detail{
    display: block;
    font-size: 12px;
    padding: 2px 0;
}



.bottomMenu{
    width: 100%;
    position: fixed;
    bottom:0px;
    padding: 15px 0;
    border-top: 1px solid #f8f8f8;
    display: flex;
    flex-direction: column;
    justify-content: start;
    align-items: space-between;
    box-sizing: border-box;
}



.bottomMenu .controlMenu{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.checkBox{
    display: flex;
    flex-direction: row;
    justify-content: start;
    align-items: center;
}

.checkBox cover-image{
    width: 18px;
    height: 18px;
    margin-right: 5px;
}

.payBtn{
    width: 200px;
    padding: 10px 5px;
    border-radius: 18px;
    border: 1px solid #292C32;
    display: block;
    text-align: center;
    font-size: 14px;
    margin: auto;
}